<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<fragment>
<extension
         point="org.eclipse.rap.ui.entrypoint">
      <entrypoint
            class="org.csstudio.trends.databrowser2.WorkbenchDataBrowserRuntimeEntryPoint"
            id="org.csstudio.trends.databrowser2.workbenchDataBrowserRuntime"
            path="/d"
            brandingId="org.csstudio.trends.databrowser2.branding.workbench">
      </entrypoint>
   </extension>
   <extension
         point="org.eclipse.rap.ui.branding">
      <branding
            body="html/body.html"
            favicon="icons/DataBrowserRunner.png"
            id="org.csstudio.trends.databrowser2.branding.workbench"
            themeId="org.csstudio.trends.databrowser2.rap.theme"
            title="DataBrowser">
      </branding>
   </extension>
   <extension
         point="org.eclipse.rap.ui.themes">
      <theme
            file="theme/default-extensions.css"
            id="org.csstudio.trends.databrowser2.rap.theme"
            name="WebDatabrowserTheme">
      </theme>
   </extension>
   
   <extension
         point="org.eclipse.equinox.http.registry.resources">
      <resource
            alias="/webdatabrowser_img/loading.gif"
            base-name="html/loading.gif">
      </resource>
   </extension>
   
   <extension
         point="org.eclipse.equinox.http.registry.servlets">
      <servlet
         alias="/"
         class="org.csstudio.trends.databrowser2.RedirectServlet">
      </servlet>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.filters">
      <filter
            alias="/"
            class="org.csstudio.trends.databrowser2.RedirectServletFilter"
            load-on-startup="true">
      </filter>
   </extension>
   
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="org.csstudio.trends.databrowser2.rap.AboutWebPopup"
               icon="icons/about.png"
               label="%AboutTitle"
               style="push">
         </command>
      </menuContribution>
   </extension>
   
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.csstudio.trends.databrowser2.AboutWebDataBrowserHandler"
            id="org.csstudio.trends.databrowser2.rap.AboutWebPopup"
            name="%AboutTitle">
      </command>
   </extension>
   
</fragment>
